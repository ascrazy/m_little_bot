{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"formatter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"ignore": [
			"node_modules/*",
			"build/*",
			".env",
			".env.*",
			".devcontainer/devcontainer.json",
			".wrangler/*"
		]
	}
}
